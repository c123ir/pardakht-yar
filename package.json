  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/react-helmet": "^6.1.11",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "react-helmet": "^6.1.0",
    "winston": "^3.17.0"
  }
}
